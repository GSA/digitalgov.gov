{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020", "DOM"],
    "outDir": "./config/scripts",
    "rootDir": "./config/typescript",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["config/typescript/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
